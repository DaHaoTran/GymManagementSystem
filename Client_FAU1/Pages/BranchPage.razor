@page "/"
@using Client_FAU.Variables
@using Microsoft.AspNetCore.Antiforgery
@attribute [RequireAntiforgeryToken(required: true)]
@using System.ComponentModel.DataAnnotations

<PageTitle>Branch</PageTitle>

@if(!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-2 d-flex">
        <div class="w-50">
            @message
        </div>
        <div class="w-100 d-flex justify-content-end align-items-center">
            <a class="btn btn-close" data-bs-dismiss="alert" aria-label="Close" />
        </div>
    </div>
}

@if(Lists.branches != null)
{
    <div class="row mt-3">
        <div class="col-6">
            <button class="btn w-25" data-bs-toggle="modal" data-bs-target="#editmodal" @onclick=SetAddState>+</button>
        </div>
        <div class="d-flex justify-content-end col-6">
            <input type="text" class="form-control me-3" />
            <button class="btn">Search</button>
        </div>
    </div>
    <!-- detail -->
}

<div class="row mt-5">
    @if (Lists.branches == null) { <h5>There are a problem !</h5>}
    else if(Lists.branches.Count() <= 0) {<h5>There are no record to display</h5>}
    else {
        foreach (var branch in Lists.branches)
        {
            <div class="nav-link link-dark col-3 branch" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="false" aria-controls="collapse">
                <div class="head-container d-grid">
                    <div class="bell w-75">
                        <img class="w-50" src="./images/bell.png" alt="Bell" />
                    </div>
                    <div class="branch-code">
                        <h4 class="fw-bolder">Code</h4>
                    </div>
                </div>
                <div class="w-100">
                    <img class="w-100" src="./images/gymhouse.png" alt="A Branch" />
                </div>
                <div class="branch-name text-center mt-3">
                    <h4 class="fw-bolder">Branch name</h4>
                </div>
                <div class="revenue text-end">
                    <a class="nav nav-link mt-0">Revenue>>></a>
                </div>
            </div>
            <div class="mt-1 mb-2">
                <div class="collapse collapse-horizontal" id="collapse">
                    <div class="card card-body branch-detail">
                        <div class="row">
                            <div class="col-10">
                                <div class="address w-50">
                                    <h5 class="fw-bold ms-3">Address...............</h5>
                                </div>
                                <div class="quantities row w-100">
                                    <div class="col-6 text-start">Staff</div>
                                    <div class="col-6 text-end">X 1</div>

                                    <div class="col-6 text-start">PTs</div>
                                    <div class="col-6 text-end">X 1</div>

                                    <div class="col-6 text-start">Workers</div>
                                    <div class="col-6 text-end">X 1</div>

                                    <div class="col-12 text-center fs-6 mt-2">Update by AD001</div>
                                </div>
                            </div>

                            <div class="row col-2 d-grid a-container">
                                <div class="delete d-flex justify-content-center align-items-center col-12">
                                    <a class="image w-75">
                                        <img class="w-100" src="images/trash.png" alt="Trash" />
                                    </a>
                                </div>

                                <div class="edit d-flex justify-content-center align-items-center col-12">
                                    <a class="image w-75" data-bs-toggle="modal" data-bs-target="#editmodal" @onclick=SetEditState>
                                        <img class="w-100" src="images/edit.png" alt="Edit" />
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

<!-- Modal -->
<div class="modal fade" id="editmodal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <EditForm Model="@Model" FormName="Edit Branch" OnValidSubmit="UpdateDatabase" OnInvalidSubmit="ShowInvalidMessage">
                    <DataAnnotationsValidator />

                    <div class="mb-3">
                        <label class="form-label">Branch name</label>
                        <InputText type="text" class="form-control" @bind-value=Model!.BranchName />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Address</label>
                        <InputText type="text" class="form-control" @bind-value=Model.Address />
                    </div>

                    <ValidationSummary />

                    <button type="submit" class="btn mt-3 submit-button fs-3">Confirm</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>
