@page "/account"

<PageTitle>Account</PageTitle>

<div class="row mt-3">
    <div class="col-6">
        <button class="btn w-25" data-bs-toggle="modal" data-bs-target="#editmodal">+</button>
    </div>
    <div class="d-flex justify-content-end col-6">
        <input type="text" class="form-control me-3" />
        <button class="btn">Search</button>
    </div>
</div>
<!-- detail -->
<div class="row mt-5">
    <div class="nav-link link-dark col-3 account" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="false" aria-controls="collapse">
        <div class="head-container d-grid">
            <div class="role">
                <h4 class="fw-bolder">Role</h4>
            </div>
            <div class="code">
                <h4 class="fw-bolder">Code</h4>
            </div>
        </div>
        <div class="w-100">
            <img class="w-100" src="./images/user.png" alt="A User" />
        </div>
        <div class="user-name text-center mt-3">
            <h4 class="fw-bolder">Full name</h4>
        </div>
    </div>
    <div class="mt-1 mb-2">
        <div class="collapse collapse-horizontal" id="collapse">
            <div class="card card-body user-detail">
                <div class="row">
                    <div class="col-10">
                        <div class="address w-50">
                            <h5 class="fw-bold">Living at...............</h5>
                        </div>
                        <div class="quantities row w-100">
                            <div class="text-start col-12">Age</div>
                            <div class="text-start col-12">Phone number</div>
                            <div class="text-start col-12">Id</div>
                            <div class="text-start col-12">Salary name</div>

                            <div class="col-12 text-center fs-6 mt-2">Update by AD001</div>
                        </div>
                    </div>

                    <div class="row col-2 d-grid a-container">
                        <div class="delete d-flex justify-content-center align-items-center col-12">
                            <a class="image w-75">
                                <img class="w-100" src="images/trash.png" alt="Trash" />
                            </a>
                        </div>

                        <div class="edit d-flex justify-content-center align-items-center col-12">
                            <a class="image w-75" data-bs-toggle="modal" data-bs-target="#editmodal">
                                <img class="w-100" src="images/edit.png" alt="Edit" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editmodal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="FullName" class="form-label">Full name</label>
                                <input type="text" class="form-control" id="FullName">
                            </div>
                            <div class="mb-3">
                                <label for="PhoneNumber" class="form-label">Phone Number</label>
                                <input type="text" class="form-control" id="PhoneNumber">
                            </div>
                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-4 d-flex align-items-center">
                                        <label for="Age" class="form-label mx-1">Age</label>
                                        <input type="number" class="form-control mb-3" id="Age">
                                    </div>
                                    <div class="col-8 d-flex align-items-center">
                                        <label for="Role" class="form-label mx-1">Role</label>
                                        <div class="input-group mb-3">
                                            <select class="form-select" id="Role">
                                                <option selected>Choose...</option>
                                                <option value="1">One</option>
                                                <option value="2">Two</option>
                                                <option value="3">Three</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn mt-3 submit-button fs-3">Confirm</button>
                        </div>
                        <div class="col-6">
                            <div class="mb-3">
                                <label for="Address" class="form-label mx-1">Living at</label>
                                <textarea class="form-control"></textarea>
                            </div>
                            <div class="mb-3">
                                <label for="Password" class="form-label mx-1">Password</label>
                                <input type="text" class="form-control mb-3" id="Password">
                            </div>
                            <div class="mb-3">
                                <label for="Id" class="form-label mx-1">Id</label>
                                <input type="text" class="form-control mb-3" id="Id">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

