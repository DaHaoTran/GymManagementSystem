@page "/"

<PageTitle>Building</PageTitle>

<div class="row mt-3">
    <div class="col-6">
        <button class="btn" data-bs-toggle="modal" data-bs-target="#editmodal">+</button>
    </div>
    <div class="d-flex justify-content-end col-6">
        <input type="text" class="form-control me-3"/>
        <button class="btn" data-bs-toggle="modal" data-bs-target="#editmodal">Search</button>
    </div>
</div>

<div class="row mt-5">
    <a class="nav-link link-dark" data-bs-toggle="collapse" data-bs-target="#collapse" aria-expanded="false" aria-controls="collapse">
        <div class="branch col-4 my-3">
            <div class="head-container d-grid">
                <div class="bell w-75">
                    <img class="w-50" src="./images/bell.png" alt="Bell" />
                </div>
                <div class="branch-code">
                    <h4 class="fw-bolder">Code</h4>
                </div>
            </div>
            <div class="w-100">
                <img class="w-100" src="./images/gymhouse.png" alt="A Branch" />
            </div>
            <div class="branch-name text-center mt-3">
                <h4 class="fw-bolder">Branch name</h4>
            </div>
        </div>
    </a>
    <div class="mt-1 mb-2">
        <div class="collapse collapse-horizontal" id="collapse">
            <div class="card card-body branch-detail">
                <div class="row">
                    <div class="col-10">
                        <div class="address w-50">
                            <h5 class="fw-bold ms-3">Address...............</h5>
                        </div>
                        <div class="quantities row w-100">
                            <div class="col-6 text-start">Staff</div>
                            <div class="col-6 text-end">X 1</div>

                            <div class="col-6 text-start">PTs</div>
                            <div class="col-6 text-end">X 1</div>

                            <div class="col-6 text-start">Workers</div>
                            <div class="col-6 text-end">X 1</div>

                            <div class="col-12 text-center fs-6 mt-2">Update by AD001</div>
                        </div>
                    </div>

                   <div class="row col-2 d-grid a-container">
                        <div class="delete d-flex justify-content-center align-items-center col-12">
                            <a class="image w-75">
                                <img class="w-100" src="images/trash.png" alt="Trash" />
                            </a>
                        </div>

                        <div class="edit d-flex justify-content-center align-items-center col-12">
                            <a class="image w-75" data-bs-toggle="modal" data-bs-target="#editmodal">
                                <img class="w-100" src="images/edit.png" alt="Edit" />
                            </a>
                        </div>
                   </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="editmodal" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-body">
                <form>
                    <div class="mb-3">
                        <label for="BranchName" class="form-label">Branch name</label>
                        <input type="text" class="form-control" id="BranchName">
                    </div>
                    <div class="mb-3">
                        <label for="Address" class="form-label">Address</label>
                        <input type="text" class="form-control" id="Address">
                    </div>
                    <button type="submit" class="btn mt-3 submit-button fs-3">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</div>
