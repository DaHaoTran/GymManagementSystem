@page "/login"
@using Client_FAU.Variables

<PageTitle>Login</PageTitle>

<div class="container">
    <div class="login_cpn">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="fw-bold flex-wrap" id="login_text">Gym Management System</h1>
            </div>
            <div class="d-flex justify-content-center">
                <div class="col-md-6 image_login m-3 mt-0 ms-5 d-none d-md-block">
                    <img class="w-100" src="/images/loginimage.png" alt="gym boy" />
                </div>
                <div class="col-md-6 m-3 me-5">
                    @if(!Load.IsFirstLoad)
                    {
                        <form>
                            <div class="mb-4 mt-3">
                                <label for="codeInput" class="form-label fw-bold fs-3">Code</label>
                                <input type="text" class="form-control border-dark border-2" id="codeInput" aria-describedby="code">
                                <div id="code" class="form-text"></div>
                            </div>
                            <div class="mb-4">
                                <label for="passInput" class="form-label fw-bold fs-3">Password</label>
                                <input type="text" class="form-control border-dark border-2" id="passInput" aria-describedby="code">
                                <div id="pass" class="form-text"></div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning fw-bold fs-4">Confirm</button>
                            </div>
                        </form>
                    } else
                    {
                        <div class="d-flex justify-content-center align-items-center h-100 m-0">
                            <svg class="bike" viewBox="0 0 48 30" width="48px" height="30px">
                                <g fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1">
                                    <g transform="translate(9.5,19)">
                                        <circle class="bike__tire" r="9" stroke-dasharray="56.549 56.549" />
                                        <g class="bike__spokes-spin" stroke-dasharray="31.416 31.416" stroke-dashoffset="-23.562">
                                            <circle class="bike__spokes" r="5" />
                                            <circle class="bike__spokes" r="5" transform="rotate(180,0,0)" />
                                        </g>
                                    </g>
                                    <g transform="translate(24,19)">
                                        <g class="bike__pedals-spin" stroke-dasharray="25.133 25.133" stroke-dashoffset="-21.991" transform="rotate(67.5,0,0)">
                                            <circle class="bike__pedals" r="4" />
                                            <circle class="bike__pedals" r="4" transform="rotate(180,0,0)" />
                                        </g>
                                    </g>
                                    <g transform="translate(38.5,19)">
                                        <circle class="bike__tire" r="9" stroke-dasharray="56.549 56.549" />
                                        <g class="bike__spokes-spin" stroke-dasharray="31.416 31.416" stroke-dashoffset="-23.562">
                                            <circle class="bike__spokes" r="5" />
                                            <circle class="bike__spokes" r="5" transform="rotate(180,0,0)" />
                                        </g>
                                    </g>
                                    <polyline class="bike__seat" points="14 3,18 3" stroke-dasharray="5 5" />
                                    <polyline class="bike__body" points="16 3,24 19,9.5 19,18 8,34 7,24 19" stroke-dasharray="79 79" />
                                    <path class="bike__handlebars" d="m30,2h6s1,0,1,1-1,1-1,1" stroke-dasharray="10 10" />
                                    <polyline class="bike__front" points="32.5 2,38.5 19" stroke-dasharray="19 19" />
                                </g>
                            </svg>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
